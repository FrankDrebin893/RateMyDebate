<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/RMD.css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="mainDiv">
        <div class="bannerDiv">
            <table>
                <tr>
                    <td>
                        <img src="~/imgs/logo.png" />
                    </td>
                    <td>
                        <div class="divabsolute">
                            <input value="User Name" /> <br />
                            <input value="Password" style="margin-top:5px" /><br />

                            <button type="button" style="margin-top:5px; margin-left:0px">Log In</button>
                            <button type="button" style="margin-top: 5px; margin-right:37px">Create</button> <br />
                            @Html.ActionLink("Forgot Password?", "Index", "Home")
                        </div>
                    </td>
                </tr>
            </table>
        </div>



        <div>

            @RenderBody()
        </div>
        <div class="bottomDiv">
            This is a footer for small details
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
